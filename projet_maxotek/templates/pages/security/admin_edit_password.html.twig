{% extends 'base.html.twig' %}

{% block title %}Modification de mot de passe{% endblock %}


{% block body%}

    <div class="container text-light">

        <h2 class="mt-4 d-flex justify-content-center">Modification de mot de passe</h2>

        {{ form_start(form) }}
            <div class="form-error">
                {{ form_errors(form) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.newPassword) }}
                <div class="form-error">
                    {{ form_errors(form.newPassword) }}
                </div>
            </div>


            <div class="form-group d-flex justify-content-center mt-5 mb-5">
                {{ form_row(form.Submit) }}
                <div class="d-flex justify-content-center mt-3 ms-5 mb-5"><a href="{{ path('administrateur.edit', {id : id} )}}" class="btn btn-secondary">Retour</a></div>
            </div>

        {{ form_end(form) }}

    </div>

{% endblock %}